{
    "branches": [
        "main",
        {
            "name": "rc-*",
            "prerelease": true
        }
    ],
    "plugins": [
        [
            "@semantic-release/commit-analyzer",
            {
                "preset": "angular",
                "releaseRules": [
                    {
                        "type": "feat",
                        "release": "minor"
                    },
                    {
                        "type": "fix",
                        "release": "patch"
                    },
                    {
                        "type": "docs",
                        "release": null
                    },
                    {
                        "type": "style",
                        "release": null
                    },
                    {
                        "type": "refactor",
                        "release": null
                    },
                    {
                        "type": "perf",
                        "release": "patch"
                    },
                    {
                        "type": "test",
                        "release": null
                    },
                    {
                        "type": "build",
                        "release": "patch"
                    },
                    {
                        "type": "ci",
                        "release": null
                    },
                    {
                        "type": "chore",
                        "release": null
                    },
                    {
                        "breaking": true,
                        "release": "major"
                    },
                    {
                        "type": "feat",
                        "scope": "BREAKING",
                        "release": "major"
                    },
                    {
                        "type": "fix",
                        "scope": "BREAKING",
                        "release": "major"
                    },
                    {
                        "type": "refactor",
                        "scope": "BREAKING",
                        "release": "major"
                    },
                    {
                        "type": "hotfix",
                        "release": "patch"
                    },
                    {
                        "type": "fix",
                        "scope": "hotfix",
                        "release": "patch"
                    }
                ],
                "parserOpts": {
                    "noteKeywords": [
                        "BREAKING CHANGE",
                        "BREAKING CHANGES",
                        "BREAKING"
                    ]
                }
            }
        ],
        [
            "@semantic-release/release-notes-generator",
            {
                "preset": "angular",
                "parserOpts": {
                    "noteKeywords": [
                        "BREAKING CHANGE",
                        "BREAKING CHANGES",
                        "BREAKING"
                    ]
                },
                "writerOpts": {
                    "commitsSort": [
                        "subject",
                        "scope"
                    ]
                },
                "presetConfig": {
                    "types": [
                        {
                            "type": "feat",
                            "section": "‚ú® Nuevas Funcionalidades"
                        },
                        {
                            "type": "fix",
                            "section": "üêõ Correcciones de Errores"
                        },
                        {
                            "type": "perf",
                            "section": "‚ö°Ô∏è Mejoras de Rendimiento"
                        },
                        {
                            "type": "build",
                            "section": "üèóÔ∏è Construcci√≥n y Dependencias"
                        },
                        {
                            "type": "docs",
                            "section": "üìö Documentaci√≥n"
                        },
                        {
                            "type": "style",
                            "section": "üíé Estilos"
                        },
                        {
                            "type": "refactor",
                            "section": "‚ôªÔ∏è Refactorizaciones"
                        },
                        {
                            "type": "test",
                            "section": "‚úÖ Pruebas"
                        },
                        {
                            "type": "ci",
                            "section": "üîÑ Integraci√≥n Continua"
                        },
                        {
                            "type": "chore",
                            "section": "üßπ Tareas Generales"
                        },
                        {
                            "type": "hotfix",
                            "section": "üö® Hotfixes"
                        }
                    ]
                }
            }
        ],
        [
            "@semantic-release/changelog",
            {
                "changelogFile": "CHANGELOG.md",
                "changelogTitle": "# Historial de Cambios\n\nTodos los cambios notables de este proyecto ser√°n documentados en este archivo."
            }
        ],
        [
            "@semantic-release/git",
            {
                "assets": [
                    "CHANGELOG.md"
                ],
                "message": "chore(release): v${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
            }
        ],
        [
            "@semantic-release/github",
            {
                "successComment": "üöÄ Este PR est√° incluido en la versi√≥n v${nextRelease.version}",
                "failComment": "‚ùå La release fall√≥. Revisar los logs de CI para m√°s detalles.",
                "failTitle": "‚ùó Release fallida",
                "releasedLabels": [
                    "üè∑Ô∏è released"
                ],
                "releaseNameTemplate": "Versi√≥n v{{version}} üéâ"
            }
        ]
    ],
    "preset": "angular",
    "tagFormat": "v${version}"
}